function join(row) {
  "use strict";

  if (row.getLength() < 2) {
    return 0;
  }
  
  var start = 0, end = row.getLength(), color = row.checkColor(0);
  
  while (true) {
	var halfLength = Math.floor((end - start) / 2);
	var middle = start + halfLength;
    
	if (color != row.checkColor(middle)) {
      if (halfLength === 0) {
        return start;
      }
      
      end = middle;
    }
    else {
      if (halfLength === 0) {
        return end;
      }
      
      start = middle;
    }
  }
}

