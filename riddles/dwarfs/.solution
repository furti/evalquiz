function join(row) {
  "use strict";

  if (row.getLength() < 2) {
    return 0;
  }
  
  for (var i=1; i<row.getLength(); i+=1) {
    if (row.checkColor(i-1) != row.checkColor(i)) {
      return i;
    }
  }
  
