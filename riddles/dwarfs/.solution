function join(row) {
  "use strict";
  
  return (row.getLength() < 2) ? 0 : test(row, row.checkColor(0), 0, row.getLength());
}

function test(row, color, start, end) {
  var halfLength = Math.floor((end - start) / 2);
  var middle = start + halfLength;
  
  if (color != row.checkColor(middle)) {
    return (halfLength === 0) ? start : test(row, color, start, middle);
  }
	
  return (halfLength === 0) ? end : test(row, color, middle, end);
}